<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorText">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorText">

            <CheckBox
                android:id="@+id/checkBoxUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:paddingRight="15sp"
                android:paddingLeft="15sp"
                android:layout_gravity="center_vertical"
                android:text="@string/check_box_update_app"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryText"/>

            <CheckBox
                android:id="@+id/checkBoxActivateBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                android:paddingRight="15sp"
                android:paddingLeft="15sp"
                android:layout_gravity="center_vertical"
                android:text="@string/check_box_activate_background"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryText"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/colorDivider"
                tools:ignore="SmallSp"/>

            <Button
                android:id="@+id/btnLanguage"
                android:onClick="btnLanguageOnClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_gravity="center"
                android:background="?attr/colorPrimary"
                android:padding="10sp"
                android:text="@string/button_language"
                android:textSize="20sp"
                android:textColor="@color/colorText"/>

            <Button
                android:id="@+id/btnTheme"
                android:onClick="btnThemeOnClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_gravity="center"
                android:background="?attr/colorPrimary"
                android:padding="10sp"
                android:text="@string/dialog_title_theme"
                android:textSize="20sp"
                android:textColor="@color/colorText"/>

            <Button
                android:id="@+id/btnAdsDisable"
                android:onClick="btnAdsDisableOnClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_gravity="center"
                android:background="?attr/colorPrimary"
                android:padding="10sp"
                android:text="@string/button_ads_disable"
                android:textSize="20sp"
                android:textColor="@color/colorText"/>

            <Button
                android:id="@+id/btnAdsDisableRecovery"
                android:onClick="btnAdsDisableRecoveryOnClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_gravity="center"
                android:background="?attr/colorPrimary"
                android:padding="10sp"
                android:text="@string/button_ads_disable_recovery"
                android:textSize="20sp"
                android:textColor="@color/colorText"/>

            <Button
                android:id="@+id/btnFeedback"
                android:onClick="btnFeedbackOnClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_gravity="center"
                android:background="?attr/colorPrimary"
                android:padding="10sp"
                android:text="@string/button_feedback"
                android:textSize="20sp"
                android:textColor="@color/colorText"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>